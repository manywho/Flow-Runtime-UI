{
    "name": "manywho-ui-bootstrap",
    "version": "2.65.0",
    "description": "ManyWho HTML5 React Bootstrap components",
    "author": "ManyWho",
    "repository": {
        "type": "git",
        "url": "https://github.com/manywho/ui-bootstrap.git"
    },
    "scripts": {
        "docs": "typedoc js --out docs --ignoreCompilerErrors --mode modules & start docs/index.html",
        "start": "webpack --config webpack.development.config.js --env.build=../ui-html5/build --env.assets=local --env.watch --env.sourcemaps",
        "dev": "webpack --config webpack.development.config.js",
        "dist": "webpack -p --config webpack.production.config.js",
        "postdist": "node bundle",
        "precommit": "lint-staged",
        "test": "jest"
    },
    "lint-staged": {
        "*.ts": "tslint",
        "*.tsx": [
            "tslint",
            "git add",
            "jest --bail --findRelatedTests"
        ]
    },
    "devDependencies": {
        "@types/enzyme": "^3.1.10",
        "@types/jest": "^21.1.10",
        "@types/react": "16.3.2",
        "babel-jest": "^21.2.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "chart.js": "^2.7.2",
        "clean-webpack-plugin": "^0.1.19",
        "css-loader": "^0.28.11",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-14": "^1.0.5",
        "enzyme-adapter-react-16": "^1.1.1",
        "extract-text-webpack-plugin": "^3.0.2",
        "file-loader": "^1.1.11",
        "husky": "^0.14.3",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^22.4.3",
        "jest-junit-reporter": "^1.1.0",
        "jquery": "^2.1.4",
        "less": "^2.7.3",
        "less-loader": "^4.1.0",
        "license-webpack-plugin": "^1.3.1",
        "lint-staged": "^5.0.0",
        "react": "^16.3.2",
        "react-addons-test-utils": "^0.14.8",
        "react-collapse": "^4.0.3",
        "react-dom": "^16.3.2",
        "react-dom-factories": "^1.0.0",
        "react-dropzone": "^4.2.10",
        "react-maskedinput": "^4.0.1",
        "react-motion": "^0.5.2",
        "react-selectize": "^3.0.1",
        "react-test-renderer": "^16.3.2",
        "react-transition-group": "^1.0.0",
        "script-loader": "^0.7.2",
        "string-replace-loader": "^2.1.1",
        "style-loader": "^0.19.1",
        "ts-jest": "^21.2.4",
        "ts-loader": "^3.5.0",
        "tslint": "5.10.0",
        "tslint-config-airbnb": "^5.8.0",
        "tslint-loader": "^3.6.0",
        "typedoc": "^0.9.0",
        "typescript": "^2.8.3",
        "webpack": "^3.11.0",
        "webpack-bundle-analyzer": "^2.11.1"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "**/js/components/*.{ts,tsx}"
        ],
        "setupFiles": [
            "<rootDir>/test-setup.js"
        ],
        "setupTestFrameworkScriptFile": "<rootDir>/setup-tests-globals.js",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ],
        "moduleNameMapper": {
            "\\.(css|less)$": "identity-obj-proxy"
        },
        "testResultsProcessor": "./node_modules/jest-junit-reporter"
    },
    "dependencies": {
        "@types/react-maskedinput": "^4.0.3",
        "create-react-class": "^15.6.3",
        "lint": "^1.1.2"
    }
}
