{
  "name": "ui-runtime",
  "version": "1.0.0",
  "description": "Consolidated UI runtime repo",
  "author": "Boomi",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manywho/ui-runtime.git"
  },
  "main": "webpack.config.js",
  "dependencies": {
    "localforage": "^1.7.3",
    "ramda": "^0.27.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "request-promise": "^4.2.5"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.34",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.5",
    "css-loader": "^3.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "extract-loader": "^3.1.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^4.2.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-string-replace-plugin": "^1.1.0",
    "jest": "^25.3.0",
    "jest-junit-reporter": "^1.1.0",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "license-webpack-plugin": "^2.1.3",
    "merge-webpack-plugin": "^0.2.1",
    "mini-css-extract-plugin": "^0.8.0",
    "react-test-renderer": "^16.13.1",
    "remove-files-webpack-plugin": "^1.1.3",
    "script-loader": "^0.7.2",
    "string-replace-loader": "^2.2.0",
    "style-loader": "^1.0.0",
    "stylelint": "^13.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-standard": "^19.0.0",
    "ts-jest": "^25.3.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "worker-loader": "^2.0.0"
  },
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.development.js --env.development",
    "build": "webpack -p --config webpack.config.production.js",
    "test:bootstrap": "cd ui-bootstrap && npm test",
    "test:core": "cd ui-core && npm test",
    "test:offline_old": "cd ui-offline && npm test",
    "test:offline": "jest ./ui-offline/__tests__/**",
    "test": "npm run test:bootstrap && npm run test:core && npm run test:offline",
    "lint:bootstrap": "eslint 'ui-bootstrap/js/**'",
    "lint:core": "eslint 'ui-core/js/**'",
    "lint:offline": "eslint 'ui-offline/js/**'",
    "lint": "eslint 'ui-bootstrap/js/**' 'ui-core/js/**' 'ui-offline/js/**'",
    "lint:bootstrap:test": "eslint 'ui-bootstrap/__tests__/**'",
    "lint:core:test": "eslint 'ui-core/test/**'",
    "lint:offline:test": "eslint 'ui-offline/__tests__/**'",
    "lint:test": "eslint 'ui-bootstrap/__tests__/**' 'ui-core/test/**' 'ui-offline/__tests__/**'",
    "stylelint:bootstrap": "stylelint 'ui-bootstrap/css/**/*.less'",
    "stylelint:offline": "stylelint 'ui-offline/css/**/*.less'",
    "stylelint:themes": "stylelint 'ui-themes/styles/**/*.less'",
    "stylelint": "stylelint 'ui-bootstrap/css/**/*.less' 'ui-themes/styles/**/*.less' 'ui-offline/css/**/*.less'"
  },
  "jest": {
    "collectCoverage": true,
    "setupFiles": [
      "<rootDir>/test-setup.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/setup-tests-globals.js",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
    "moduleNameMapper": {
      "worker.js": "<rootDir>/ui-offline/__mocks__/workerMock.js"
    },
    "testResultsProcessor": "./node_modules/jest-junit-reporter"
  }
}
