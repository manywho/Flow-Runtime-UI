{
    "name": "manywho-ui-bootstrap",
    "version": "2.65.0",
    "description": "ManyWho HTML5 React Bootstrap components",
    "author": "ManyWho",
    "repository": {
        "type": "git",
        "url": "https://github.com/manywho/ui-bootstrap.git"
    },
    "scripts": {
        "docs": "typedoc js --out docs --ignoreCompilerErrors --mode modules & start docs/index.html",
        "start": "webpack --config webpack.development-watch.config.js",
        "dev": "webpack --config webpack.development.config.js",
        "dist": "webpack -p --config webpack.production.config.js",
        "precommit": "lint-staged",
        "test": "jest"
    },
    "lint-staged": {
        "*.ts": "lint",
        "*.tsx": "lint"
    },
    "devDependencies": {
        "@types/enzyme": "^3.1.5",
        "@types/jest": "^21.1.7",
        "@types/react": "^0.14.57",
        "babel-jest": "^21.2.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "chart.js": "^2.2.2",
        "css-loader": "^0.28.7",
        "enzyme": "^3.2.0",
        "enzyme-adapter-react-14": "^1.0.5",
        "extract-text-webpack-plugin": "^3.0.2",
        "file-loader": "^1.1.5",
        "husky": "^0.14.3",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^21.2.1",
        "jquery": "^2.1.4",
        "less": "^2.7.3",
        "less-loader": "^4.0.5",
        "lint-staged": "^5.0.0",
        "react": "^0.14.6",
        "react-addons-test-utils": "^0.14.8",
        "react-dom": "^0.14.6",
        "react-test-renderer": "^16.1.1",
        "react-transition-group": "^1.2.1",
        "script-loader": "^0.7.2",
        "style-loader": "^0.19.0",
        "ts-jest": "^21.2.3",
        "ts-loader": "^3.1.1",
        "tslint": "^5.8.0",
        "tslint-config-airbnb": "^5.4.2",
        "tslint-loader": "^3.5.3",
        "typedoc": "^0.9.0",
        "typescript": "^2.0.2",
        "webpack": "^3.8.1",
        "webpack-bundle-analyzer": "^2.9.1"
    },
    "jest": {
        "collectCoverage": false,
        "collectCoverageFrom": [
            "**/js/components/*.{ts,tsx}"
        ],
        "setupFiles": [
            "<rootDir>/test-setup.js"
        ],
        "setupTestFrameworkScriptFile": "<rootDir>/setup-tests-globals.js",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ],
        "moduleNameMapper": {
            "\\.(css|less)$": "identity-obj-proxy"
        }
    }
}
